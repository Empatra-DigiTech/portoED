---
const features = [
  {
    icon: 'assets/features/icon-01.svg',
    title: 'Creative Digital Solutions',
    ref: 'javascript:void(0)',
    refTitle: 'Learn More',
    description:
      'To provide creative and relevant digital solutions that support client growth across various sectors.',
  },
  {
    icon: 'assets/features/icon-02.svg',
    title: 'Innovative Tech Development',
    ref: 'javascript:void(0)',
    refTitle: 'Learn More',
    description:
      'To develop innovative technology products that are future-oriented and aligned with emerging needs.',
  },
  {
    icon: 'assets/features/icon-03.svg',
    title: 'Empowered Work Culture',
    ref: 'javascript:void(0)',
    refTitle: 'Learn More',
    description:
      'To foster a collaborative, adaptive, and energetic work culture based on four core values: courage, innovation, creativity, and energy.',
  },
  {
    icon: 'assets/features/icon-04.svg',
    title: 'Inclusive & Sustainable Transformation',
    ref: 'javascript:void(0)',
    refTitle: 'Learn More',
    description:
      'To promote inclusive and sustainable digital transformation, upholding local values within a global perspective.',
  },
  {
    icon: 'assets/features/icon-04.svg',
    title: 'Youth Talent Empowerment',
    ref: 'javascript:void(0)',
    refTitle: 'Learn More',
    description:
      'To be a growth space for young talents to experiment, innovate, and contribute through technology.',
  },
];
---

<!-- ====== Features Section Start -->
<section class="pt-20 pb-8 lg:pt-[120px] lg:pb-[70px] dark:bg-dark">
  <div class="container">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <div class="mb-12 mx-auto max-w-[485px] lg:mb-[70px] text-center">
          <span class="mb-2 block text-lg font-semibold text-primary">
            Our Vision and Mission
          </span>
          <h2 class="mb-3 text-3xl font-bold text-dark dark:text-white sm:text-4xl md:text-[40px] md:leading-[1.2]">
            Vision
          </h2>
          <p class="text-base text-body-color dark:text-dark-6">
            To become a trusted partner in digital transformation that is empowering, 
            innovative, and impactful driven by a spirit of collaboration and bold creativity.
          </p>
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap">
      {
        features.map((feature) => (
          <div class="w-full px-4 md:w-1/2 lg:w-1/4">
            <div class="wow fadeInUp group mb-12" data-wow-delay=".1s">
              <div
                class="relative z-10 mb-10 flex h-[70px] w-[70px] items-center justify-center rounded-[14px] bg-primary"
              >
                <span
                  class="absolute top-0 left-0 -z-[1] mb-8 flex h-[70px] w-[70px] rotate-[25deg] items-center justify-center rounded-[14px] bg-primary bg-opacity-20 duration-300 group-hover:rotate-45"
                ></span>
                <img src={feature.icon} alt="icon" />
              </div>
              <h4 class="mb-3 text-xl font-bold text-dark dark:text-white">
                {feature.title}
              </h4>
              <p class="mb-8 text-body-color dark:text-dark-6 lg:mb-9">
                {feature.description}
              </p>
              <a
                href={feature.ref}
                class="text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary"
              >
                {feature.refTitle}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<!-- ====== Features Section End -->